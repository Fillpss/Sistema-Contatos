@{
    ViewData["Title"] = "Criar Contato";
}

<div class="text-center">

    <h1 class="display-4">Adicionar Contato</h1>

    <form>
        <div class="form-group">
            <label class="d-grid gap-2 d-md-flex justify-content-md-start" for="nome">Nome</label>
            <input type="text" class="form-control" placeholder="Digite o nome do contato...">
        </div>

        <div class="form-group">
            <label class="d-grid gap-2 d-md-flex justify-content-md-start" for="nome">Email</label>
            <input type="text" class="form-control" placeholder="Digite o email do contato...">
        </div>

        <div class="form-group">
            <label class="d-grid gap-2 d-md-flex justify-content-md-start" for="nome">Número</label>
            <input type="text" class="input-with-margin-bottom form-control" placeholder="Digite o número do contato...">
        </div>

        <button type="submit" class="btn btn-success">Adicionar</button>
        <a class="btn-back btn btn-danger" role="button" asp-controller="Contatos" asp-action="Index">Cancelar</a>
    </form>

</div>